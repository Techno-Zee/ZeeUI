<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="zee_ui.CharFieldBase" t-inherit="web.CharField" t-inherit-mode="extension">
        <xpath expr="//input[hasclass('o_input')]" position="after">
            <t t-if="props.isPassword">
                <i class="bi bi-eye-slash password-toggle" t-att-id="'toggle_' + props.id" t-on-click="togglePassword" style="position: absolute;right: 20px;"/>
            </t>
        </xpath>
    </t>
</templates> 