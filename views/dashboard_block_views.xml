<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view of the dashboard block -->
    <record id="dashboard_block_view_form" model="ir.ui.view">
        <field name="name">dashboard.block.view.form</field>
        <field name="model">dashboard.block</field>
        <field name="arch" type="xml">
            <form class="dashboard-block-form">
                <sheet>
                    <!-- Header Section -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline" placeholder="Block Name" required="1"/>
                        </h1>
                        <h3>
                            <field name="sub_title"/>
                        </h3>
                    </div>

                    <!-- Configuration Section -->
                    <group>
                        <group string="Configuration">
                            <field name="model_id" required="1" options="{'no_create_edit':True,'no_create': True}"/>
                            <field name="client_action_id" invisible="1"/>
                            <field name="model_name" invisible="1"/>
                            <field name="edit_mode" invisible="1"/>
                            <field name="operation" required="1"/>
                            <field name="measured_field_id" required="1" 
                                   options="{'no_create_edit':True, 'no_create': True}" 
                                   domain="[('model_id','=',model_id), ('ttype','in',['float','integer','monetary']), ('store', '=', True)]"/>
                            <field name="record_value" readonly="1"/>
                            <field name="filter" widget="domain" options="{'model': 'model_name'}"/>
                        </group>

                        <!-- Preview Section -->
                        <group string="Preview" invisible="type == 'graph'">
                            <div class="dashboard-preview-card">
                                <div class="preview-icon">
                                    <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Icon"/>
                                </div>
                                <div class="preview-data">
                                    <div class="preview-value">
                                        <field name="record_value" readonly="1"/>
                                    </div>
                                    <field name="prev" invisible="prev == 0" readonly="1">
                                        <div class="preview-comparison">
                                            <span class="preview-label">Vs Prev</span>
                                            <span class="preview-percentage negative">20%</span>
                                        </div>
                                    </field>
                                </div>
                                <field name="name" readonly="1" class="preview-title"/>
                                <field name="sub_title" readonly="1" class="preview-subtitle"/>
                                <field name="target" invisible="target == 0" readonly="1">
                                    <div class="preview-comparison">
                                        <span class="preview-label">Vs Target</span>
                                        <span class="preview-percentage">NAN%</span>
                                    </div>
                                </field>
                            </div>
                        </group>
                    </group>

                    <!-- Notebook Section -->
                    <notebook>
                        <page string="Block Information">
                            <group>
                                <group>
                                    <field name="type" required="1"/>
                                    <field name="graph_type" invisible="type == 'tile'"/>
                                    <field name="fa_icon" invisible="type == 'graph'" widget="icon_picker"/>
                                    <field name="group_by_id" invisible="type == 'tile'" 
                                           options="{'no_create_edit':True, 'no_create': True}" 
                                           required="1" 
                                           domain="[('model_id','=',model_id), ('ttype','!=','one2many'), ('store', '=', True)]"/>
                                    <field name="tile_color" invisible="type == 'graph'" widget="color"/>
                                    <field name="val_color" invisible="type == 'graph'" widget="color"/>
                                    <field name="text_color" invisible="type == 'graph'" widget="color"/>
                                </group>
                            </group>
                        </page>

                        <page string="Target Settings" invisible="type != 'tile'">
                            <group>
                                <field name="prev" readonly="1"/>
                                <field name="target" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view of the dashboard block -->
    <record id="dashboard_block_view_list" model="ir.ui.view">
        <field name="name">dashboard.block.view.list</field>
        <field name="model">dashboard.block</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model_id"/>
                <field name="type"/>
            </list>
        </field>
    </record>

    

    
</odoo>